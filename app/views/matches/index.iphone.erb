<% form_for(@match, :html => {:id=>"settings", :title=>"New Game", :class=>"panel", :selected=>"true", :target => "_self"}) do |f| %>
  <%= f.error_messages %>
  <h2>Gelb</h2>
  <fieldset>
    <div class="row yellow">
      <label>Spieler</label>
      <%= f.select(:yellow_team_id, Player.all.collect {|p| [ p.username, p.id ] }, {:selected => Player.last}) %>
    </div>
    <div class="row yellow">
      <%= f.label :yellow_goals, "Tore" %>
      <%= f.select(:yellow_goals, (0..10).to_a) %>
    </div>
  </fieldset>
  
  <h2>Wei√ü</h2>
  <fieldset>
    <div class="row">
      <label>Spieler</label>
      <%= f.select(:white_team_id, Player.all.collect {|p| [ p.username, p.id ] }) %>
    </div>    
    <div class="row">
      <%= f.label :white_goals, "Tore" %>
      <%= f.select(:white_goals, (0..10).to_a) %>
    </div>
  </fieldset>
  <%= link_to "Save", "#", :type => "submit", :class=>"whiteButton" %>
<%- end -%>

<div class="toolbar">
    <h1 id="pageTitle">Last Matches</h1>
    <a id="backButton" class="button" href="#"></a>
    <a class="button" href="#searchForm">Search</a>
</div>

<%= matches_list(@matches) %>

