<h2>Listing games</h2>

<table class="full">
  <tr>
    <th>White player</th>
    <th>Yellow player</th>
    <th>Winner</th>
    <th></th>
  </tr>

<% @games.each do |game| %>
  <tr>
    <td><%=h game.matches.first ? game.white_team.usernames : "Keine Matches bisher" %></td>
    <td><%=h game.matches.first ? game.yellow_team.usernames : "Keine Matches bisher" %></td>
    <td><%=h((w = game.winner) ? w.usernames : "Nobody") %></td>
    <td><%= link_to 'Show', game_matches_path(game) %></td>
  </tr>
<% end %>
</table>

